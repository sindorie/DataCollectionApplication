<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp" >

        <TextView
            android:id="@+id/left_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/4"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_step"
            android:text="Sample Instruction"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/left_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_text"
            android:text="Sample Hint"
            android:textSize="16dip" />

        <tracker.UI.view.EventRecordedImageView
            android:id="@+id/left_image"
            android:layout_width="270dp"
            android:layout_height="400dp" 
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/left_hint" />

        <tracker.UI.view.EventRecordedButton
            android:id="@+id/left_open_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="openRightPanel"
            android:visibility="invisible" />
        
        <!-- 
        
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
         -->
    </RelativeLayout>

</ScrollView>