<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News @source by ISU Daily"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="5dp" />
        <include layout="@layout/view_separater" />
        
        <!-- top section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1" >

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_upper1"
                android:layout_width="0dp"
                android:text="Headlines"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_upper2"
                android:layout_width="0dp"
                android:text="World"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF" />

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_upper3"
                android:layout_width="0dp"
                android:text="Education"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_upper4"
                android:layout_width="0dp"
                android:text="US"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1" >

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_lower1"
                android:layout_width="0dp"
                android:text="Sports"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF" />

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_lower2"
                android:layout_width="0dp"
                android:text="ISU"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF" />

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_lower3"
                android:layout_width="0dp"
                android:text="Health"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF" />

            <tracker.UI.view.EventRecordedButton
                android:id="@+id/new_top_lower4"
                android:layout_width="0dp"
                android:text="Editorial"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <include layout="@layout/view_separater" />
        
