<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"     >
	
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="@layout/rect_album_frame"
    	android:layout_margin="10dp"
    	android:padding="5dp" >
    <TextView
        android:id="@+id/gallerylist_element_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="#FFFFFF" />

    <tracker.UI.view.EventRecordedImageView
        android:id="@+id/gallerylist_element_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gallerylist_element_title"
        android:padding="10dp" />
	</RelativeLayout>
</LinearLayout>
