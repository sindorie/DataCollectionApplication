<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0CFD5" >

    <TextView
        android:id="@+id/social_friend_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Status"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <tracker.UI.view.RegisteredEditText
        android:id="@+id/social_news_addstatus_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="10"
        android:inputType="textMultiLine" >
        <requestFocus />
    </tracker.UI.view.RegisteredEditText>
    
	<LinearLayout
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <tracker.UI.view.EventCheckerButton
        android:id="@+id/social_news_addstatus_submit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <tracker.UI.view.EventRecordedButton
        android:id="@+id/social_news_addstatus_cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Cancel" />
	</LinearLayout>
</LinearLayout>
